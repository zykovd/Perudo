<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suai.perudo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".view.PerudoApplication"
        android:allowBackup="true"
        android:icon="@drawable/launcher5611"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launcher5611_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.LoginActivity"  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MenuActivity"  android:screenOrientation="portrait" />
        <activity android:name=".view.SettingsActivity"  android:screenOrientation="portrait" />
        <activity android:name=".view.JoinActivity"  android:screenOrientation="portrait" />
        <activity android:name=".view.GameActivity" android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>